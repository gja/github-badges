.search
  %form.search_form{:method => :get, :action => "/badges"}
    %fieldset
      %label{:for => "username"} username
      %div#username_container
        %input{:type => "text", :name => "username", :id => "username", :placeholder => "Github username"}
        %div#spinner
      %input{:type => "Submit", :value => "Search"}
      %p.examples
        Examples: #{badge_link("matz")}, #{badge_link("defunkt")}, #{badge_link("cv")}.
        Authors: #{badge_link("bguthrie")}, #{badge_link("gja")}, #{badge_link("mneedham")}.
  %div.examples
